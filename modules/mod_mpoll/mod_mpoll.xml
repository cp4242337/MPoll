<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" client="site" method="upgrade">
	<name>mod_mpoll</name>
	<author>DtD Productions</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2009 DTD Productsion</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@dtdpro.com</authorEmail>
	<authorUrl>www.dtdpro.com</authorUrl>
	<version>1.6</version>
	<description>MOD_MPOLL_DESC</description>
	<files>
		<filename module="mod_mpoll">mod_mpoll.php</filename>
		<filename module="mod_mpoll">mod_mpoll_ajax.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_mpoll.ini</language>
		<language tag="en-GB">en-GB.mod_mpoll.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_mpoll/models/fields">
				<field name="poll" type="modal_mpoll" label="Poll" description="" required="true" />
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="" />
				<field name="showtitle" type="radio" default="1" label="Show Poll Title" description="">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="showresults" type="radio" default="1" label="Show Poll Results" description="">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="showresultslink" type="radio" default="0" label="Show Results Button" description="">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="resultsas" type="radio" default="count" label="Results as" description="Show results in the ____ format.">
					<option value="count">Count</option>
					<option value="percent">Percentages</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>

<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: helloworld.xml 62 2010-11-28 16:08:16Z chdemko $ -->
<form>
	<fieldset name="setup">
		<field
			name="poll_id"
			type="hidden"
		/>
		<field
			name="published"
			type="list"
			id="published"
			class="inputbox"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			size="1"
			default="1"
			filter="integer">
			<option	value="1">JPUBLISHED</option>
			<option	value="0">JUNPUBLISHED</option>
			<option	value="2">JARCHIVED</option>
			<option	value="-2">JTRASHED</option>
		</field>
		<field
			name="access"
			type="accesslevel"
			id="access"
			class="inputbox"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"
			filter="integer"/>
		<field
			name="poll_name"
			type="text"
			label="COM_MPOLL_MPOLL_FIELD_NAME_LABEL"
			description="COM_MPOLL_MPOLL_FIELD_NAME_DESC"
			size="40"
			class="inputbox"
			required="true"
			default=""
		/>
		<field
			name="poll_cat"
			type="category"
			extension="com_mpoll"
			class="inputbox"
			default=""
			label="COM_MPOLL_MPOLL_FIELD_CATID_LABEL"
			description="COM_VMPOLL_MPOLL_FIELD_CATID_DESC"
			required="true">
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
	</fieldset>
	<fieldset name="details">
		<field
			name="poll_desc"
			type="editor"
			label="COM_MPOLL_MPOLL_FIELD_DESC_LABEL"
			description="COM_MPOLL_MPOLL_FIELD_DESC_DESC"
			class="inputbox"
			filter="safehtml"
			buttons="true"
			hide="readmore,pagebreak,article"
		/>
		<field
			name="poll_rmsg"
			type="editor"
			label="COM_MPOLL_MPOLL_FIELD_RMSG_LABEL"
			description="COM_MPOLL_MPOLL_FIELD_RMSG_DESC"
			class="inputbox"
			filter="safehtml"
			buttons="true"
			hide="readmore,pagebreak,article"
		/>
	</fieldset>
	<fieldset name="publishing">
		<field 
			name="poll_start" type="calendar"
			label="COM_MPOLL_MPOLL_FIELD_START_LABEL"
			description="COM_MPOLL_MPOLL_FIELD_START_DESC"
			filter="user_utc"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
		/>
		<field 
			name="poll_end" type="calendar"
			label="COM_MPOLL_MPOLL_FIELD_END_LABEL"
			description="COM_MPOLL_MPOLL_FIELD_END_DESC"
			filter="user_utc"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
		/>
		<field
			name="poll_only"
			type="radio"
			label="COM_MPOLL_MPOLL_FIELD_ONLY_LABEL"
			description="COM_MPOLL_MPOLL_FIELD_ONLY_DESC"
			size="1"
			class="inputbox"
			required="true"
			default="">
			<option	value="0">Yes</option>
			<option	value="1">No</option>
		</field>
		<field
			name="poll_showresults"
			type="radio"
			label="COM_MPOLL_MPOLL_FIELD_SHOWRESULTS_LABEL"
			description="COM_MPOLL_MPOLL_FIELD_SHOWRESULTS_DESC"
			size="1"
			class="inputbox"
			required="true"
			default="">
			<option	value="0">Yes</option>
			<option	value="1">No</option>
		</field>
		<field 
			name="poll_created" 
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL" 
			description="JGLOBAL_FIELD_CREATED_DESC"
			class="inputbox" 
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" 
		/>
		<field 
			name="poll_created_by" 
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL" 
			description="JGLOBAL_FIELD_CREATED_BY_Desc"
		 />
		<field 
			name="poll_modified" 
			type="calendar" 
			class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			description="JGLOBAL_FIELD_MODIFIED_DESC"
			size="22" 
			readonly="true" 
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" 
		/>
		<field 
			name="poll_modified_by" 
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"  
		/>
	</fieldset>

</form>

